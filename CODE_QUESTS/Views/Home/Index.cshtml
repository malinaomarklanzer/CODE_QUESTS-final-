@{
    ViewData["Title"] = "Welcome to CodeQuest";
}

<section class="hero-section">
    <div class="hero-content">
        <div class="hero-bg-image"></div>
        <div class="hero-text-content">
            <h1 class="hero-title text-shadow"><span class="text-blue">Code</span><span class="text-pink">Quest</span></h1>
            <h2 class="hero-subtitle text-shadow">Test Your Programming Knowledge</h2>
            <p class="hero-description">
                Challenge yourself with our interactive coding quizzes. Improve your skills in JavaScript, Python, HTML/CSS, and more!
            </p>
            <div class="hero-buttons">
                <a asp-controller="Account" asp-action="SignUp" class="hero-btn start-btn">
                    <img src="~/images/shuttle 2.png" alt="Rocket" />
                    Start Adventure
                </a>
                <a asp-controller="Leaderboard" asp-action="Index" class="hero-btn leaderboard-btn-hero">
                    View Leaderboard
                    <img src="~/images/trophy 3.png" alt="Trophy" />
                </a>
            </div>
        </div>
    </div>
</section>

<section class="quiz-categories-section">
    <div class="container">
        <h2 class="section-title">QUIZ CATEGORIES</h2>
        <div class="difficulty-grid">

            <div class="difficulty-column">
