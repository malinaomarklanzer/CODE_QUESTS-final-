@model LoginViewModel
@{
    ViewData["Title"] = "Log In";
    ViewData["BodyClass"] = "auth-body";
}

<div class="welcome-bubble">
    <img src="~/images/Component 2.png" alt="Wizard Mascot" />
    <div>Welcome back! Your progress is waiting.</div>
</div>
<div class="form-container">
    <h1 class="form-title">Enter your Credentials</h1>

    <form class="auth-form" asp-controller="Account" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <input asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <button type="submit" class="submit-btn">Log In</button>
    </form>

    <div class="bottom-links">
        <p>Don't have an account? <a asp-controller="Account" asp-action="SignUp">Sign Up</a></p>
        <p><a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a></p>
    </div>
</div>