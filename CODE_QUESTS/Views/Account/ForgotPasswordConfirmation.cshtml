@{
    ViewData["Title"] = "Forgot Password Confirmation";
    ViewData["BodyClass"] = "auth-body";
}

<div class="form-container" style="max-width: 480px; text-align: center;">
    <h1 class="form-title">Check Your Email</h1>
    <p style="font-size: 1.1rem; margin: 1rem 0 2rem;">
        If an account exists with that email, we have sent a link to reset your password. (Check your Debug Console for the link).
    </p>
    <a asp-controller="Home" asp-action="Index" class="submit-btn" style="text-decoration: none;">
        Back to Home
    </a>
</div>