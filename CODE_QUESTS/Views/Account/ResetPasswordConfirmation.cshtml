@{
    ViewData["Title"] = "Reset Password Confirmation";
    ViewData["BodyClass"] = "auth-body";
}

<div class="form-container" style="max-width: 480px; text-align: center;">
    <h1 class="form-title">Password Reset!</h1>
    <p style="font-size: 1.1rem; margin: 1rem 0 2rem;">
        Your password has been successfully updated. You can now log in.
    </p>
    <a asp-controller="Account" asp-action="Login" class="submit-btn" style="text-decoration: none;">
        Back to Login
    </a>
</div>